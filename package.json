{
  "name": "bitauth-cli",
  "description": "universal identity and message authentication",
  "version": "0.0.0",
  "author": "Jason Dreyzehner @bitjson",
  "bin": {
    "bitauth": "./bin/run"
  },
  "bugs": "https://github.com/bitauth/bitauth-cli/issues",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-autocomplete": "^0.1.5",
    "@oclif/plugin-help": "^2",
    "@oclif/plugin-not-found": "^1.2.3",
    "@oclif/plugin-update": "^1.3.9",
    "@oclif/plugin-warn-if-update-available": "^1.7.0",
    "ansi-colors": "^4.1.1",
    "bitcoin-ts": "^1.12.0",
    "cli-ux": "^5.4.4",
    "enquirer": "^2.3.4",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@types/chai": "^4",
    "@types/mocha": "^7.0.1",
    "@types/node": "^13.7.1",
    "chai": "^4",
    "cspell": "^4.0.46",
    "eslint": "^6.8.0",
    "eslint-config-bitauth": "^1.0.0",
    "eslint-config-oclif": "^3.1.1",
    "eslint-config-oclif-typescript": "^1.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-functional": "^3.0.1",
    "eslint-plugin-import": "^2.20.1",
    "globby": "^11.0.0",
    "mocha": "^7.0.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "ts-node": "^8",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/bitauth/bitauth-cli",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "bitauth",
    "plugins": [
      "@oclif/plugin-warn-if-update-available",
      "@oclif/plugin-help",
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-update",
      "@oclif/plugin-not-found"
    ]
  },
  "repository": "bitauth/bitauth-cli",
  "scripts": {
    "fix": "yarn fix:tslint && yarn fix:prettier",
    "fix:prettier": "prettier --write \"{src,test}/**/*.{json,ts}\"",
    "fix:tslint": "eslint . --ext .ts --fix",
    "pack": "oclif-dev pack",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "yarn test:spelling && yarn test:lint && yarn test:prettier",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && yarn readme",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "readme": "oclif-dev readme && prettier --write README.md",
    "test:lint": "eslint . --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "types": "lib/index.d.ts",
  "prettier": {
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
